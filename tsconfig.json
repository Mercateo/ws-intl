{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "jsx": "react",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "types": [
      "mocha"
    ]
  },
  "exclude": [
    "node_modules",
    "examples",
    "dist-release",
    "dist-tests"
  ]
}
